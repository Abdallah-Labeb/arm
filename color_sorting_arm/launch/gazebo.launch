<launch>
  
  <!-- Load robot description -->
  <param name="robot_description" 
         command="$(find xacro)/xacro '$(find color_sorting_arm)/urdf/arm.gazebo.xacro'" />
  
  <!-- Launch Gazebo with sorting world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find color_sorting_arm)/worlds/sorting_world.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>
  
  <!-- Spawn robot in Gazebo on the table -->
  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model"
        args="-param robot_description -urdf -model sorting_arm -x 0.0 -y 0 -z 0.8"
        output="screen" />
  
  <!-- Load joint controller configurations -->
  <rosparam file="$(find color_sorting_arm)/config/controllers.yaml" command="load"/>
  
  <!-- Spawn controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner"
        respawn="false" output="screen" ns="/sorting_arm"
        args="joint_state_controller
              joint1_position_controller
              joint2_position_controller
              joint3_position_controller
              joint4_position_controller
              joint5_position_controller
              gripper_left_position_controller
              gripper_right_position_controller"/>
  
  <!-- Joint State Publisher GUI (for testing) -->
  <!-- <node name="joint_state_publisher_gui" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui" /> -->

  <!-- Robot state publisher - reads joint_states and publishes TF -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
        respawn="false" output="screen">
    <remap from="joint_states" to="/sorting_arm/joint_states" />
    <param name="publish_frequency" value="50.0"/>
  </node>

</launch>
